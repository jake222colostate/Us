{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noEmit": true,
    "types": [
      "react",
      "react-native"
    ],
    "baseUrl": ".",
    "paths": {
      "@us/ui": [
        "../../packages/ui"
      ]
    }
  },
  "include": [
    "src",
    "app",
    "index.ts",
    "index.tsx",
    "App.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}