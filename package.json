{
  "name": "us-monorepo",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "pnpm --filter sideui dev",
    "build": "pnpm --filter sideui build",
    "repo:unstage-binaries": "git rm -r --cached . && git add . && git commit -m \"chore: drop binaries from index via .gitignore\" || echo \"No changes\"",
    "repo:strip-binaries": "bash tools/strip_binaries.sh",
    "repo:check-binaries": "node tools/check_binaries.mjs",
    "seed:assets": "node tools/seed_assets.mjs",
    "dev:web": "expo start --web",
    "dev:native": "pnpm --filter app-mobile expo start",
    "dev:web:mobile": "pnpm --filter app-mobile expo start --web",
    "web:dev": "pnpm -C apps/sideui dev",
    "web:build": "pnpm -C apps/sideui build",
    "web:preview": "pnpm -C apps/sideui preview",
    "mobile:start": "pnpm -C apps/mobile start",
    "lint": "pnpm lint:root && pnpm lint:mobile",
    "lint:root": "eslint .",
    "lint:mobile": "pnpm --filter app-mobile lint",
    "typecheck": "pnpm --recursive typecheck",
    "test": "pnpm --recursive test",
    "migrate:dev": "pnpm --filter supabase-infra migrate:dev",
    "seed": "pnpm --filter supabase-infra seed",
    "format": "prettier --write .",
    "dev:frontend": "pnpm -C apps/sideui dev",
    "build:frontend": "pnpm -C apps/sideui build",
    "preview:frontend": "pnpm -C apps/sideui preview"
  },
  "devDependencies": {
    "@babel/core": "^7",
    "@babel/runtime": "^7.28.4",
    "@expo/cli": "0.18.21",
    "@expo/metro-runtime": "~3.2.0",
    "@expo/server": "0.7.5",
    "@types/node": "20.10.6",
    "@types/react": "~19.1.17",
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "@typescript-eslint/parser": "6.13.1",
    "@vitejs/plugin-react": "^4.3.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "expo": "^54.0.2",
    "expo-modules-autolinking": "^3.0.20",
    "jest-expo": "~54.0.13",
    "prettier": "3.1.1",
    "react-native-web": "~0.19.12",
    "typescript": "5.9.3",
    "vite": "^5.4.0"
  },
  "dependencies": {
    "@expo/metro-config": "^54.0.8",
    "@expo/vector-icons": "^15.0.3",
    "expo-constants": "^18.0.10",
    "expo-file-system": "~19.0.17",
    "expo-font": "^14.0.9",
    "expo-image": "~3.0.10",
    "expo-linear-gradient": "~15.0.7",
    "expo-linking": "^8.0.8",
    "expo-secure-store": "~15.0.7",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-web-browser": "~15.0.9",
    "metro": "^0.83.3",
    "metro-cache": "^0.83.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-native": "0.81.5",
    "react-native-reanimated": "~4.1.0",
    "react-native-worklets": "^0.5.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra/*",
    "frontend"
  ]
}