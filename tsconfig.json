{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@us/types": [
        "packages/types/src"
      ],
      "@us/ui": [
        "packages/ui/src/index.ts"
      ],
      "@us/config": [
        "packages/config/src"
      ],
      "@us/config/*": [
        "packages/config/src/*"
      ],
      "@us/ui/*": [
        "packages/ui/src/*"
      ]
    },
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}